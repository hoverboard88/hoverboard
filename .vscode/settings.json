{
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.renderWhitespace": "all",
  "files.associations": {
    "*.css": "postcss"
  },
  "files.exclude": {
    "**/.git": false,
    "**/wp-admin": true,
    "**/wp-content/cache": true,
    "**/wp-content/mu-plugins": true,
    "**/wp-content/plugins": false,
    "**/wp-content/themes/twenty*": true,
    "**/wp-content/upgrade": true,
    "**/wp-content/uploads": true,
    "**/wp-includes": true,
    "**/wp-content/themes/hoverboard/**/*.min.*": true
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[php]": {
    "editor.defaultFormatter": "valeryanm.vscode-phpsab"
  },
  "phpcbf.enable": false,
  "phpcs.enable": false,
  "phpsab.standard": "WordPress",
  "phpsab.snifferMode": "onSave",
  "phpsab.debug": true,
  "phpsab.executablePathCS": "./wp-content/themes/hoverboard/vendor/bin/phpcs",
  "phpsab.executablePathCBF": "./wp-content/themes/hoverboard/vendor/bin/phpcbf"
}
