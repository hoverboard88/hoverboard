{% extends "base.twig" %}

{% block content %}
  <div class="content-wrapper">
    <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
      <section class="article-content">
        <h1 class="article-h1">{{post.title}}</h1>

        {% include 'video/video.twig' with {
          'type': fields.video_type,
          'embed': fields.video_embed,
          'upload': fields.video_upload,
        } %}

        {% include 'post-content/post-content.twig' with {
          'content': post.content,
        } %}

        {% for content_section in content_sections %}
          {% include content_section.acf_fc_layout ~ '/' ~ content_section.acf_fc_layout ~ '.twig' ignore missing with {
            'fields': content_section,
          } %}
        {% endfor %}
      </section>
    </article>
  </div><!-- /content-wrapper -->
{% endblock %}