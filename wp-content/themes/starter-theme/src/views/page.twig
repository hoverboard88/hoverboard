{% extends "base.twig" %}

{% block content %}
  <article class="page" id="page--{{post.ID}}">
    {% include 'page-title/page-title.twig' with {
      'title': post.title,
      'type': 'page',
    } %}

    {% if content_sections %}
      {% for content_section in content_sections %}
        {% include content_section.acf_fc_layout ~ '.twig' ignore missing with {
          'fields': content_section,
        } %}
      {% endfor %}
    {# If no content sections, show the page content #}
    {% else %}
      {% include 'post-content/post-content.twig' with {
        'content': post.content,
        'type': post.post_type,
      } %}
    {% endif %}
  </article>
{% endblock %}
