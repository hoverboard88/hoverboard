{% extends "base.twig" %}

{% block content %}
  <div class="content-wrapper">
    <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
      <section class="article-content">
        <h1 class="article-h1">{{post.title}}</h1>

        {% if content_sections %}
          {% for content_section in content_sections %}
            {% include content_section.acf_fc_layout ~ '.twig' ignore missing with {
              'fields': content_section,
            } %}
          {% endfor %}
        {# If no content sections, show the page content #}
        {% else %}
          {% include 'post-content/post-content.twig' with {
            'content': post.content,
          } %}
        {% endif %}

      </section>
    </article>
  </div><!-- /content-wrapper -->
{% endblock %}
