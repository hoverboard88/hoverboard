{% if menu %}
  <nav class="{{menu_name}}-menu" role="navigation">
    <ul class="{{menu_name}}-menu__items">

      {% for menu_item in menu %}
        <li class="{{menu_name}}-menu__item{{ menu_item.classes | join(' ') }}">

          <a class="{{menu_name}}-menu__link" target="{{ menu_item.target }}" href="{{ menu_item.link }}">
            {{ menu_item.title }}
          </a>

          {% if menu_item.children %}

            {% include "menu/menu.twig" with {
              'menu_name': menu_name,
              'menu': menu_item.children
            } %}

          {% endif %}

        </li>
      {% endfor %}

    </ul>
  </nav>
{% endif %}
