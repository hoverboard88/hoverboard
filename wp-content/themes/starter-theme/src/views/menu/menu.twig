{% if menu %}
  <nav class="{{menu_name}}-menu" role="navigation">
    <ul class="{{menu_name}}-menu__items">

      {% for menu_item in menu %}
        <li class="{{menu_name}}-menu__item{{ menu_item.classes | join(' ') }}">

          <a class="{{menu_name}}-menu__link" target="{{ menu_item.target }}" href="{{ menu_item.link }}">
            {{ menu_item.title }}
          </a>

          {% if menu_item.children %}
            <ul class="{{menu_name}}-menu__items menu__items--child">

              {% for menu_item_child in menu_item.children %}
                <li class="{{menu_name}}-menu__item menu__item--child{{ menu_item.classes | join(' ') }}">

                  <a class="{{menu_name}}-menu__link menu__link--child" href="{{ menu_item_child.link }}">
                    {{ menu_item_child.title }}
                  </a>

                </li>
              {% endfor %}

            </ul>
          {% endif %}

        </li>
      {% endfor %}

    </ul>
  </nav>
{% endif %}
