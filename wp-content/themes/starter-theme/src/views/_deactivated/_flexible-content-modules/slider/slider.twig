<section class="slider" data-init-js="slider" data-options-js='{}'>
  <div data-slider class="glide">
    <div data-glide-el="track" class="glide__track">
      <ul class="glide__slides">
        {% for slide in fields.slides %}

          <li class="glide__slide">
            <h3 class="glide__title">
              {{slide.title}}
            </h3>

            <img class="glide__image" src="{{slide.image.sizes.large}}" alt="{{slide.image.alt}}">

            <div class="glide__text">
              {{slide.text}}
            </div>
          </li>

        {% endfor %}
      </ul>
    </div>

    {% if fields.slides|length > 1 %}
      <div class="glide__arrows" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--prev" data-glide-dir="<">
          {{ 'arrow-left'|svg }}
        </button>
        <button class="glide__arrow glide__arrow--next" data-glide-dir=">">
          {{ 'arrow-right'|svg }}
        </button>
      </div>

      <div class="glide__bullets" data-glide-el="controls[nav]">
        {% for slide in fields.slides %}
          <button class="glide__bullet" data-glide-dir="={{loop.index - 1}}">{{loop.index}}</button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

