<section class="accordion" data-init-js="accordion" data-options-js='{"open": {{fields.first_section}} }'>
  {% for section in fields.sections %}

    <div class="accordion__item js-accordion-item">
      <button class="accordion__button js-accordion-button">
        <h3 class="accordion__subtitle">{{section.title}}</h3>
      </button>

      <div class="accordion__text">
        {{section.text}}
      </div>
    </div>

  {% endfor %}
</section>
