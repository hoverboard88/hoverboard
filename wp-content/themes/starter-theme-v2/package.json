{
  "author": "Hoverboard (http://hoverboardstudios.com)",
  "description": "Hoverboard",
  "name": "hoverboard",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:hoverboard88/client-sites/hoverboard-theme.git"
  },
  "scripts": {
    "start": "npm run images && npm run dev",
    "dev": "rollup --config --watch",
    "build": "rollup --config && npm run images",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "eslint": "eslint 'src/**/*.js'",
    "phpcs": "./bash_scripts/phpcs.sh",
    "lint": "npm run eslint && npm run stylelint",
    "images": "svgo assets/images/ src/images/ --disable=removeViewBox && imageoptim assets/images src/images/",
    "stylelint": "stylelint 'src/**/*.css' 'modules/**/*.css' '!src/css/global/normalize.css'",
    "create-module": "./bash_scripts/createModule.sh"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.7.7",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-import": "2.19.1",
    "eslint-plugin-prettier": "3.1.2",
    "globby": "^11.0.0",
    "imageoptim-cli": "^3.0.2",
    "postcss": "7.0.26",
    "postcss-custom-media": "^7.0.8",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "1.19.1",
    "rollup": "^1.27.14",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-browsersync": "^1.1.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-glob-import": "^0.4.5",
    "rollup-plugin-postcss": "^2.0.3",
    "stylelint": "12.0.1",
    "stylelint-config-recommended": "3.0.0",
    "svgo": "^1.3.2"
  },
  "dependencies": {
    "@glidejs/glide": "^3.4.1",
    "magnific-popup": "^1.1.0"
  }
}
