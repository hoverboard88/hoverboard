{
  "author": "Hoverboard (http://hoverboardstudios.com)",
  "description": "Hoverboard",
  "name": "hoverboard",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:hoverboard88/client-sites/hoverboard-theme.git"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "scripts": {
    "build": "gulp",
    "create-block": "node ./bin/createBlock.mjs",
    "create-part": "node ./bin/createPart.js",
    "fix": "npm run fix:config && npm run fix:css",
    "fix:config": "npx eclint fix",
    "fix:css": "npx stylelint 'assets/blocks/*.css' 'assets/global/*.css' 'parts/**/*.css' 'blocks/**/*.css' '!assets/css/global/normalize.css' --fix",
    "start": "gulp watch",
    "test": "npm run test:css && npm run test:js && npm run test:config && npm run test:php",
    "test:css": "npx stylelint 'assets/blocks/*.css' 'assets/global/*.css' 'parts/**/*.css' 'blocks/**/*.css' '!assets/css/global/normalize.css'",
    "test:config": "npx eclint check",
    "test:js": "prettier --check 'blocks/**/*.js' 'parts/**/*.js'",
    "test:php": "./bin/phpcs.sh"
  },
  "devDependencies": {
    "@babel/core": "7.21.8",
    "@babel/preset-env": "7.21.5",
    "autoprefixer": "10.4.14",
    "browser-sync": "2.29.1",
    "eclint": "2.8.1",
    "eslint": "8.40.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "globby": "13.1.4",
    "gulp": "4.0.2",
    "gulp-babel": "8.0.0",
    "gulp-concat": "2.6.1",
    "gulp-cssnano": "2.1.3",
    "gulp-postcss": "9.0.1",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgo": "2.2.1",
    "postcss": "8.4.23",
    "postcss-custom-media": "9.1.3",
    "postcss-extend": "1.0.5",
    "postcss-nested": "6.0.1",
    "postcss-preset-env": "8.3.2",
    "prettier": "2.8.8",
    "stylelint": "15.6.1",
    "stylelint-config-recommended": "12.0.0"
  },
  "dependencies": {
    "@glidejs/glide": "3.6.0",
    "@inquirer/prompts": "^1.1.3",
    "gulp-rename": "^2.0.0",
    "gulp-uglify-es": "^3.0.0"
  }
}
