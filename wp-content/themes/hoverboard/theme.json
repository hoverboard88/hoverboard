{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "styles": {
        "spacing": {
            "blockGap": "20px",
            "padding": {
                "top": "0",
                "right": "20px",
                "bottom": "0",
                "left": "20px"
            }
        },
        "typography": {
            "fontFamily": "'Noto Sans', sans-serif",
            "fontSize": "16px",
            "lineHeight": "1.5"
        }
    },
    "settings": {
        "useRootPaddingAwareAlignments": true,
        "layout": {
            "contentSize": "1024px",
            "wideSize": "1440px"
        },
        "spacing": {
            "spacingScale": {
                "operator": "*",
                "increment": 2,
                "steps": 6,
                "mediumStep": 40,
                "unit": "px"
            },
            "margin": true,
            "padding": true,
            "blockGap": true
        },
        "color": {
            "custom": false,
            "defaultPalette": false,
            "palette": [
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "#000000"
                },
                {
                    "name": "Gray",
                    "slug": "gray",
                    "color": "#6b6b6b"
                },
                {
                    "name": "Gray (Light)",
                    "slug": "gray-light",
                    "color": "#ABB8C3"
                },
                {
                    "name": "Blue",
                    "slug": "blue",
                    "color": "#0693E3"
                },
                {
                    "name": "Blue (Light)",
                    "slug": "blue-light",
                    "color": "#8ED1FC"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#ffffff"
                }
            ]
        },
        "blocks": {
            "core/button": {
                "border": {
                    "radius": false
                }
            }
        }
    }
}
