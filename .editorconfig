# editorconfig.org
root = true

[*]
block_comment_start = /**
block_comment = *
block_comment_end = */
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,json}]
indent_style = space

[composer.lock]
indent_size = 4
indent_style = space
